<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_metrologia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/principal_rojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="50dp"
        app:tabIndicatorColor="@color/cardview_dark_background"
        app:tabTextColor="@color/cardview_light_background"
        tools:ignore="PrivateResource">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/opcion1_metrologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SISTEMAS DE MEDICION" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/opcion2_metrologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EQUIPO EMPLEADO" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_metrologia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="97dp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout_metrologia" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="@string/prueba_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
